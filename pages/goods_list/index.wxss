.tabs_first .goods_item {
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.tabs_first .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tabs_first .goods_item .goods_img_wrap image {
  width: 70%;
}
.tabs_first .goods_item .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.tabs_first .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  color: gray;
  padding-top: 10rpx;
}
.tabs_first .goods_item .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
