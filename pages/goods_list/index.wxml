<!--pages/category/index.wxml-->

<search></search>
<Tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange">
   <block wx:if="{{tabs[0].isActive}}">
    <view class="tabs_first">
      <navigator wx:for="{{goods_list}}" wx:key="goods_id" class="goods_item" url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
        <view class="goods_img_wrap">
            <image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'https://ww1.sinaimg.cn/large/007rAy9hgy1g24by9t530j30i20i2glm.jpg'}}"/>
        </view>
        <view class="goods_info_wrap">
            <view class="goods_name">{{item.goods_name}}</view>
            <view class="goods_price">${{item.goods_price}}</view>
        </view>
      </navigator>
    </view>
   </block> 
   <block wx:if="{{tabs[1].isActive}}">111</block> 
   <block wx:if="{{tabs[2].isActive}}">222</block>  
</Tabs>